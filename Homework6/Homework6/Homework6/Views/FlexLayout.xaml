<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FlexLayoutDemos"
             x:Class="Homework6.Views.FlexLayout"
             Title="Flex Layout">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="NormalText">Red</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="SpaceEvenly">

        <Label Text="Flex Layout Demo" FontSize="Large"/>

        <Image Source="https://upload.wikimedia.org/wikipedia/commons/6/63/Waterfront_Park_%28Seattle%29.jpg"/>
        
        <Label Text="This label is using a shared resource." TextColor="{StaticResource NormalText}" />
        
        <Label Text="And this one is not." />
    </FlexLayout>
</ContentPage>